<odoo>
    <data>

        <record model="ir.ui.view" id="omixtory.host_list">
            <field name="name">omixtory host list</field>
            <field name="model">omixtory.host</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="site_id"/>
                    <field name="vmid"/>
                    <field name="ip"/>
                    <field name="template_id"/>
                    <button string="Config" name="open_config" type="object" class="oe_highlight" />
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- page search view  -->
        <record id="omixtory.host_search" model="ir.ui.view">
            <field name="name">omixtory.host.search</field>
            <field name="model">omixtory.host</field>
            <field name="arch" type="xml">
                <search string="Host">
                    <field name="client_id"/>
                    <field name="template_id"/>
                    <field name="name"/>
                    <filter string="Normal" name="normal" domain="[('state','=','normal')]"/>
                    <filter string="Draft"  name="draft" domain="[('state','=','draft')]"/>
                    <separator/>
                    <filter string="Box"  name="box" domain="[('site_id','!=',False)]"/>
                    <filter string="Cloud"  name="cloud" domain="[('site_id','=',False)]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <group string="Group By">
                        <filter string="Client" name="client" domain="[]" context="{'group_by':'client_id'}"/>
                        <filter string="Site" name="site" domain="[]" context="{'group_by':'site_id'}"/>
                        <filter string="Template" name="template" domain="[]" context="{'group_by':'template_id'}"/>
                        <!--<filter string="Location" domain="[]" context="{'group_by':'location'}"/>-->
                        <filter string="State" name="state" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="omixtory.host_form">
            <field name="name">omixtory host form</field>
            <field name="model">omixtory.host</field>
            <field name="arch" type="xml">
                <form string="Host">
                    <header>
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" required="0"/><span>   </span>
                            </h1>
                            <h1>
                                <field name="ssh_url" widget="link_button" readonly="1" icon="fa-terminal"/>
                            </h1>
                        </div>
                        <group>
                            <group invisible="context.get('one2many')">
                                <field name="client_id"/>
                                <field name="site_id"/>
                                <field name="location" readonly="1"/>
                            </group>
                            <group attrs="{'invisible': [('id','!=',False)]}">
                                <field name="template_id" widget="radio"/>
                            </group>
                            <group>
                                <field name="cores" />
                                <field name="mem"/>
                                <field name="disk"/>
                            </group>
                            <group attrs="{'invisible': [('id','=',False)]}">
                                <field name="ip" />
                                <field name="vmid"/>
                                <button string="Config" name="open_config" type="object" class="oe_highlight" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>