<odoo>
    <data>
        <record model="ir.ui.view" id="wizard_with_step_form">
            <field name="name">omixtory.service.create.form</field>
            <field name="model">omixtory.service.create</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Create service">

                    <group>
                        <group>
                            <field name="client_id" />
                            <field name="site_id" />
                            <field name="location" readonly="1" />
                        </group>

                        <group>
                            <field name="config" widget="radio" />
                        </group>
                    </group>

                    <footer>
                        <button name="create_service" string="Create" type="object" />
                    </footer>

                </form>
            </field>
        </record>
        <function model="omixtory.service.template" name="install"/>
    </data>
</odoo>