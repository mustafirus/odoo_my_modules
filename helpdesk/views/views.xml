<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="helpdesk.list">
      <field name="name">helpdesk list</field>
      <field name="model">helpdesk.helpdesk</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="helpdesk.action_window">
      <field name="name">helpdesk window</field>
      <field name="res_model">helpdesk.helpdesk</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="helpdesk.action_server">
      <field name="name">helpdesk server</field>
      <field name="model_id" ref="model_helpdesk_helpdesk"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Helpdesk" id="menu_root" />


    <!-- menu categories -->

    <menuitem name="Dashboard" id="menu_dash" parent="menu_root" action="action_window"/>
    <menuitem name="Search" id="menu_tickets" parent="menu_root"/>
    <menuitem name="Configuration" id="menu_config" parent="menu_root"/>

    <!-- actions -->

    <menuitem name="Tickets" id="menu_tickets_act" parent="menu_tickets"
              action="action_window"/>
  </data>
</odoo>