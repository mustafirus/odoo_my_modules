<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="slotshot_list">
            <field name="name">Slotshots</field>
            <field name="model">slot_machine_counters.slotshot</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date"/>
                    <field name="hall_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="slotshot_form">
            <field name="model">slot_machine_counters.slotshot</field>
            <!--<field name="priority">15</field>-->
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_cancel" states="draft,sent,sale" type="object" string="Cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <group name="left">
                                <field name="hub_id"/>
                                <field name="hub_sim"/>
                                <field name="phone"/>
                                <field name="geo"/>
                            </group>
                            <group name="right">
                                <field name="description"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Slotshot Lines">
                                <field name="slotshot_line" mode="tree"
                                    attrs="{'readonly': [('state', 'in', ('done','cancel'))]}">
                                    <tree string="Sales Order Lines" editable="bottom">
                                        <field name="iin_begin"/>
                                        <field name="iin_end"/>
                                        <field name="out_begin"/>
                                        <field name="out_end"/>
                                        <field name="delta"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="amount_untaxed" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                    <field name="amount_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="amount_total" />
                                        <button name="button_dummy"
                                            states="draft,sent" string="(update)" type="object" class="oe_edit_only oe_link"/>
                                    </div>
                                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <div class="oe_clear"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="slot_machine_counters.action_window_hall">
            <field name="name">Hals</field>
            <field name="res_model">slot_machine_counters.hall</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="slot_machine_counters.action_window_slot">
            <field name="name">Slots</field>
            <field name="res_model">slot_machine_counters.slot</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- menu categories -->
        <menuitem name="Menu 2" id="slot_machine_counters.menu_2" parent="slot_machine_counters.menu_root"/>
        <!-- actions -->
        <menuitem name="Hals" id="slot_machine_counters.menu_hals" parent="slot_machine_counters.menu_2"
                  action="slot_machine_counters.action_window_hall"/>
    </data>
</odoo>