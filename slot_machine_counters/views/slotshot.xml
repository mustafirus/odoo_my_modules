<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="slotshot_list">
            <field name="name">Slotshots</field>
            <field name="model">slot_machine_counters.slotshot</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="slotshot_form">
            <field name="model">slot_machine_counters.slotshot</field>
            <!--<field name="priority">15</field>-->
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="get_data" type="object" string="Get data"
                                attrs="{'invisible': [('date', '=', False)]}"
                        />
                    </header>
                    <sheet>
                        <group>
                            <group name="left">
                                <field name="hall_id"/>
                                <field name="date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Slotshot Lines">
                                <field name="slotshot_lines" mode="tree" readonly="1">
                                    <tree string="Slotshot Lines">
                                        <field name="index"/>
                                        <field name="slot_id"/>
                                        <field name="iin_begin"/>
                                        <field name="iin_end"/>
                                        <field name="out_begin"/>
                                        <field name="out_end"/>
                                        <field name="delta"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                </group>
                                <div class="oe_clear"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="slot_machine_counters.action_window_slotshots">
            <field name="name">Slot Shots</field>
            <field name="res_model">slot_machine_counters.slotshot</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- menu categories -->
        <menuitem name="Search" id="slot_machine_counters.search" parent="slot_machine_counters.menu_root"/>
        <!-- actions -->
        <menuitem name="Slot Shots" id="slot_machine_counters.menu_slotshots" parent="slot_machine_counters.search"
                  action="slot_machine_counters.action_window_slotshots"/>
    </data>
</odoo>